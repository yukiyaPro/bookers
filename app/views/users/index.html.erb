<div class="row">
  <div class="col-xs-3">
    <%=render partial: "layouts/user_info" %>
  </div>
  <div class="col-xs-9">
    <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%if @users.present? %>
          <%@users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" ,size:"40x40"%></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>