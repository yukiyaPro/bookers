<div class="row">
  <div class="col-xs-3">
    <%=render partial: "layouts/user_info" %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%@user.present? %>
          <%@user.books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" ,size:"40x40"%></br>
                <% end %>
              </td>
              <td><%= link_to "#{book.title}", book_path(book) %></td>
              <td><%= book.body %></td>
              <%if book.book_comments.present? %>
                <td>コメント数:<%= book.book_comments.count %></td>
              <% else %>
                <td>コメント数:0</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>