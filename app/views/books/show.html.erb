<div class="row">
  <div class="col-xs-3">
    <%=render partial: "layouts/user_info" %>
  </div>
  <div class="col-xs-9">
    <h2>Book Detail</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
            <tr>
              <% if @book.present? %>
                <td><a href="/users/#{<%= @book.user.id %>}"><%= attachment_image_tag @book.user, :profile_image, :fill, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg",size:"40x40"%></a></td>
                <td><%= link_to "#{@book.title}", book_path(@book) %></td>
                <td><%= @book.body %></td>
                <% if @book.user_id == current_user.id %>
                  <td><%= button_to "Edit",edit_book_path(@book), class:"btn-sm btn-success" %></td>
                  <td><%=  button_to "Destroy",book_path(@book), method: :delete ,class:"btn-sm btn-danger" %></td>
                <% end %>
              <% end %>
            </tr>
        </tbody>
    </table>
  </div>
</div>